; Nom du pool
[{{ project.name }}]
; On utilisera une socket
listen = /tmp/.{{ project.name }}-fpm.sock
 
; Permission pour la socket
listen.owner = {{ project.name }}
listen.group = {{ project.name }}
listen.mode = 0666
 
; Utilsateur/Groupe des processus
user = {{ project.name }}
group = {{ project.name }}
 
; On choisira une gestion dynamique des processus
pm = dynamic
 
pm.max_children = 20
pm.start_servers = 5
pm.min_spare_servers = 5
pm.max_spare_servers = 10

request_slowlog_timeout = 1s 
slowlog = {{projectDir}}/apachelogs/phplog.slow
 
; Quelques directives de configuration de PHP
php_admin_value[session.save_path]={{projectDir}}/tmp
php_admin_value[upload_tmp_dir]={{projectDir}}/tmp

php_admin_value[newrelic.appname]="{{ project.name }}"
php_admin_value[newrelic.enabled]= 1

